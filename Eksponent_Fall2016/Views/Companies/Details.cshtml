@model Eksponent_Fall2016.Models.Company
@{
    ViewBag.Title = "Details";
}
<h2>Details</h2>
<link href="~/Content/Site.css" rel="stylesheet" />
<hr />
<div class="container">
    <div class="col-md-4 hidden-sm hidden-xs">
        <div>

            <img src="@Model.CompanyLogo" alt="Profile image" class="profileImage thumbnail img-responsive">
        </div>

    </div>
    <div class="col-md-8">
        <div class="row">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.CompanyName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CompanyName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.CompanyDescription)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CompanyDescription)
                </dd>
                <dt>
                    Skills
                </dt>
                <dd>
                    @Html.DropDownList("skills", "Skills")
                </dd>
            </dl>
        </div>
    </div>
    <div class="col-md-offset-8 col-md-4">
        @Html.ActionLink("Edit", "Edit", new { id = Model.CompanyId }) |
        @Html.ActionLink("Delete", "Delete", new { id = Model.CompanyId })|
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

