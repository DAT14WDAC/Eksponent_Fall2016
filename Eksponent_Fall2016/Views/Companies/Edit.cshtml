@model Eksponent_Fall2016.Models.Company
@{
    ViewBag.Title = "Edit";
}
<div class="container" id="companyContainer">
    <h2>Edit</h2>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <hr />
    <div class="row">
        <div class="col-md-3 hidden-sm hidden-xs">
            <img src="@Model.CompanyLogo" alt="Profile image" class="CompanyLogo thumbnail img-responsive">
        </div>

        <div class="col-md-9" style="margin-top:40px;">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.CompanyId)
                    @Html.HiddenFor(model => model.ApplicationUserId)
                    @Html.HiddenFor(model => model.CompanyLogo)
                    <div class="form-group">
                        @Html.LabelFor(model => model.CompanyName, "Company Name", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CompanyDescription, "Company description", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.CompanyDescription, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CompanyDescription, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CompanyLogo, "Company logo", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            <input name="image" type="file" />
                            @Html.ValidationMessageFor(model => model.CompanyLogo)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div>
        <div>
            @Html.ActionLink("Go to Edit Skills", "Index", "Skills")
        </div>
        <div>
            @Html.ActionLink("Back to Company Profile", "Index")
        </div>
        <div>@Html.ActionLink("Delete Company", "Delete")</div>
    </div>
</div>
