@model IEnumerable<Eksponent_Fall2016.Models.EmployeeSkill>

@{
    ViewBag.Title = "GetEmployeeSkills";
}

<h2>Employees Skill</h2>

<p>
    @Html.ActionLink("Go back", "GetSkills")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("First Name")
        </th>
        <th>
            @Html.Label("Skill Name")
        </th>
        <th>
            @Html.Label("Years Experience")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Firstname , new { htmlAttributes = new { @style = "text-transform:uppercase" } })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Skill.Skillname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeSkillId }) |
                @Html.ActionLink("Details", "Details", new { id = item.EmployeeSkillId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeSkillId })
            </td>
        </tr>
    }

</table>
