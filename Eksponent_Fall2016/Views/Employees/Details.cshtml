@model Eksponent_Fall2016.Models.Employee

@{
    ViewBag.Title = "Details";
}
<h2>Details</h2>
<link href="~/Content/Site.css" rel="stylesheet" />
<hr />
<div class="container">
    <div class="col-md-3 hidden-sm hidden-xs">
        <div>

            <img src="@Model.Profileimage" alt="Profile image" class="profileImage thumbnail img-responsive">
        </div>

    </div>
    <div class="col-md-9" style="margin-top:30px;">
        <div class="row">
            <dl class="dl-horizontal">
                <dt>
                    @Html.LabelFor(model => model.Company.CompanyName,"Company Name")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Company.CompanyName)
                </dd>
                <dt>
                    @Html.LabelFor(model => model.Firstname, "First Name")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Firstname)
                </dd>
                <dt>
                    @Html.LabelFor(model => model.Lastname, "Last Name")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Lastname)
                </dd>
                <dt>
                    My Skill focus:
                </dt>
                <dd>
                    <table class="table">
                        @*<tr>
                            <th>
                                Skill Name
                            </th>
                        </tr>*@
                        @foreach (var skill in Model.ISkillFocus)
                        {
                            <tr>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => skill.Skill.Skillname)</strong>
                                </td>
                            </tr>
                        }
                    </table>
                </dd>

</dl>
        </div>
    </div>
    <div class="col-md-offset-8 col-md-4">
        @Html.ActionLink("Edit", "Edit", new { id = Model.EmployeeId }) |
        @Html.ActionLink("Delete", "Delete", new { id = Model.EmployeeId })
    </div>
</div>





