@model Eksponent_Fall2016.Models.Employee
@{
    ViewBag.Title = "Index";
}
<h2>Profile Page</h2>
<link href="~/Content/Site.css" rel="stylesheet" />
<div class="container-fluid">
    <p>

        <div>@Html.ActionLink("Skills at my company", "EmployeeSkills", new { id = Model.Company.CompanyId })</div>
    </p>

    <div class="row">
        <div class="col-md-3">

            <div>
                <a href="@Url.Action("Edit", "Companies", new {id = Model.CompanyId})">
                    <img style="margin-top: 10px;" src="../../@Model.Profileimage" class="profileImage thumbnail img-responsive">
                    <br />
                </a>
                @*@Html.Label(company.CompanyName, new { @class = "LabelStyle" })*@
            </div>

        </div>
        <div class="col-md-9" style="margin-top:80px;">
            <dl class="dl-horizontal" style="overflow: hidden;">

                <dt>
                    @Html.DisplayNameFor(model => model.Firstname)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Firstname)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Lastname)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Lastname)
                </dd>
                <dt>
                    Company
                </dt>
                <dd>
                    @Html.DisplayFor(modelItem => Model.Company.CompanyName)
                </dd>
                <dt>
                    Skills I have:
                </dt>
                <dd>
                    @foreach (var skill in Model.IEmployeeSkill)
                    {
                        <div>Skill Name: @Html.DisplayFor(modelItem => skill.Skill.Skillname)</div>
                        <div>Skill Description: @Html.DisplayFor(modelItem => skill.Skill.Skilldescription) </div>
                    }
                </dd>
                <dt>
                    My Skill focus:
                </dt>
                <dd>
                    @foreach (var skill in Model.ISkillFocus)
                    {

                        <div>Skill Name: @Html.DisplayFor(modelItem => skill.Skill.Skillname)</div>
                        <div>Skill Description: @Html.DisplayFor(modelItem => skill.Skill.Skilldescription) </div>
                        <div>Time Started: @Html.DisplayFor(modelItem => skill.Startdate)</div>
                    }
                </dd>

            </dl>
        </div>
    </div>
</div>
